@require '@adobe/spectrum-css/dist/components/popover/index.css';
@require '@adobe/spectrum-css/dist/components/popover/index-diff.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/popover/multiStops/darkest.css';

@require '../../../coral-theme-spectrum/src/styles/vars.css';

// Prevent popover flashing on page load
coral-popover {
  display: none;
}

// @spectrum
coral-popover-footer {
  display: block;
}

coral-popover-separator {
  display: block;
}

._coral-Popover,
.coral--large ._coral-Popover {
  transition: left var(--spectrum-global-animation-duration-100) var(--spectrum-global-animation-ease-in-out),
              top var(--spectrum-global-animation-duration-100) var(--spectrum-global-animation-ease-in-out),
              opacity var(--spectrum-global-animation-duration-100) var(--spectrum-global-animation-ease-in-out),
              visibility var(--spectrum-global-animation-duration-0) var(--spectrum-global-animation-linear) var(--spectrum-global-animation-duration-100);
}

// @spectrum override for flyout popover variant
._coral-Popover:not(._coral-Popover--dialog) {
  // Increase min-width for basic popover
  min-width: 150px;

  ._coral-Dialog-content {
    padding: 0;
    margin: 0;
  }
}
