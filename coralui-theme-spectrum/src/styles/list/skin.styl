._coral-SelectList {
  background-color: $selectlist-background-color;
}

._coral-SelectList-item:not([disabled]):focus,
._coral-SelectList-item:not([disabled]).is-focused {
  background-image: linear-gradient(to right, $selectlist-focus-color 0%, $selectlist-focus-color 2*$px, transparent 2*$px, transparent 100%);
}
