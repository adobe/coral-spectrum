// prevents flash of un-styled content
coral-quickactions {
  display: none;
}

// items are hidden by default
coral-quickactions-item {
  display: none;
}

._coral-QuickActions {
  // @spectrum
  justify-content: center;

  position: absolute;
  // prevents flash of un-styled content
  visibility: hidden;
  // removes focus around the QuickActions container
  outline: none;
}

._coral-QuickActions-item {
  float: left;
  // required in layout collapse calculation
  min-width: 38*$px;

  // @spectrum
  ._coral-Icon {
    margin-top: 0;
  }
}

._coral-QuickActions-buttonList {
  // constrains the size of the list to 6 items
  max-height: 6*40*$px;
  overflow-y: auto;

// Expand list width based on content
  ._coral-BasicList-item-contentContainer {
    width: auto;
  }

  button[is="coral-buttonlist-item"] {
    width: 100%;
  }
}
