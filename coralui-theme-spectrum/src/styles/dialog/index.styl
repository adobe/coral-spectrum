// @spectrum
._coral-Dialog {
  max-width: 90%;

  &._coral-Dialog--fullscreenTakeover {
    max-width: none;
  }
}

// @compat fix header in wrapped dialog
._coral-Dialog--wrapped:not(._coral-Dialog--fullscreenTakeover) ._coral-Dialog-title {
  position: relative;
  overflow: visible;
  top: -18*$px;
}

// @spectrum
coral-dialog-footer {
  display: block;

  &:empty {
    display: none;
  }
}

// Prevent dialog flashing on page load
coral-dialog {
  display: none;
}

