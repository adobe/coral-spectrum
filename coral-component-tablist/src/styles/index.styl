@require '@adobe/spectrum-css/dist/components/tabs/index.css';
@require '@adobe/spectrum-css/dist/components/tabs/index-diff.css';
@require '@adobe/spectrum-css/dist/components/tabs/multiStops/light.css';
@require '@adobe/spectrum-css/dist/components/tabs/multiStops/lightest.css';
@require '@adobe/spectrum-css/dist/components/tabs/multiStops/dark.css';
@require '@adobe/spectrum-css/dist/components/tabs/multiStops/darkest.css';

@require '../../../coral-theme-spectrum/src/styles/vars.css';

// @spectrum support truncation
._coral-Tabs-item.is-overflowing {
  overflow: hidden;
  text-overflow: ellipsis;

  ._coral-Tabs-itemLabel:not(:empty) {
    display: inline;
  }

  ._coral-Tabs-itemInvalidIcon {
    display: inline;
    margin-right: 0;
    margin-left: 5px;
    float: right;
  }
}

// @spectrum animation
._coral-Tabs--horizontal ._coral-Tabs-selectionIndicator {
  transition: transform var(--spectrum-medium-tabs-selection-indicator-animation-duration) var(--spectrum-global-animation-ease-in-out),
              width var(--spectrum-medium-tabs-selection-indicator-animation-duration) var(--spectrum-global-animation-ease-in-out);
}

@require 'light';
@require 'lightest';
@require 'dark';
@require 'darkest';
